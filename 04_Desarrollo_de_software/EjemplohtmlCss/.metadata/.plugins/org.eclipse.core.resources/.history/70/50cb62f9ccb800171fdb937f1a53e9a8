  }
  if (password != null) {
    // Si no se cumple la condicion...
    alert('debe ingresar contrase単a');
    return false;
  }
  
  return true;
 }
 
function valContacto() {
  if (name != null) {
    // Si no se cumple la condicion...
    alert('Debe ingresar su nombre');
    return false;
  }
  if (email != null) {
    // Si no se cumple la condicion...
    alert('debe ingresar contrase単a');
    return false;
  }
  if (msg != null) {
    // Si no se cumple la condicion...
    alert('debe ingresar contrase単a');
    return false;
  }
  return true;
}