 function recuperarmail() {
   var mail = prompt("Por favor ingrese su e-mail", "Ingresa tu mail");
	if (mail != null)
		alert(" Se envio un correo con instrucciones a: " + mail);
	 else
		 alert("No ha ingresado un correo");
    
}

